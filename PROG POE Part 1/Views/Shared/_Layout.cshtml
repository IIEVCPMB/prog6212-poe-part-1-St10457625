<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROG_POE_Part_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG_POE_Part_1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Claim System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (Context.Session.GetString("UserRole") == "HR")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="HR" asp-action="Index">HR</a>
                            </li>
                        }
                        else if (Context.Session.GetString("UserRole") == "Lecturer")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Claims" asp-action="Index">Claims</a>
                            </li>
                        }
                        else if (Context.Session.GetString("UserRole") == "Coordinator")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Coordinators" asp-action="Index">Verification</a>
                            </li>
                        }
                        else if (Context.Session.GetString("UserRole") == "Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Managers" asp-action="Index">Management</a>
                            </li>
                        }
                    </ul>

                    <!--- Login/Logout -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserEmail") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">
                                    Welcome, @Context.Session.GetString("FullName")
                                </span>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-danger btn-sm ms-2" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PROG_POE_Part_1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
