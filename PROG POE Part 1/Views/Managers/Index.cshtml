@model List<PROG_POE_Part_1.Models.Claim>
@{
    ViewBag.Title = "Manager Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Manager Dashboard</h2>
    <div>
        <span class="badge bg-warning text-dark me-2">
            Pending: @ViewBag.PendingCount
        </span>
        <span class="badge bg-success text-light me-2">
            Approved: @ViewBag.ApprovedCount
        </span>
        <span class="badge bg-danger text-light">
            Declined: @ViewBag.DeclinedCount
        </span>
    </div>
</div>

<!-- Filter Navigation -->
<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "all" ? "active" : "")" asp-action="Index" asp-route-filter="all">
            All Claims (@(Model.Count))
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "pending" ? "active" : "")" asp-action="Index" asp-route-filter="pending">
            Pending (@ViewBag.PendingCount)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "approved" ? "active" : "")" asp-action="Index" asp-route-filter="approved">
            Approved (@ViewBag.ApprovedCount)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "declined" ? "active" : "")" asp-action="Index" asp-route-filter="declined">
            Declined (@ViewBag.DeclinedCount)
        </a>
    </li>
</ul>

<!-- Claims Table -->
<div class="card shadow-sm">
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="text-muted text-center py-3">
                No claims available.
            </div>
        }
        else
        {
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Date Submitted</th>
                        <th>Total Hours</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td><strong>@claim.Claim_ID</strong></td>
                            <td>@claim.Name (@claim.Lecturer_ID)</td>
                            <td>@claim.Date_Submitted.ToString("yyyy-MM-dd")</td>
                            <td>@claim.Total_Hours</td>
                            <td>@claim.Hourly_Rate</td>
                            <td>@(claim.Total_Hours* claim.Hourly_Rate)</td>
                            <td>
                                @if (claim.Status == PROG_POE_Part_1.Models.Status.Pending)
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (claim.Status == PROG_POE_Part_1.Models.Status.Approved)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (claim.Status == PROG_POE_Part_1.Models.Status.Verified)
                                {
                                    <span class="badge bg-success">Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Declined</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Review" asp-route-id="@claim.Claim_ID"
                                   class="btn btn-sm @(claim.Status == PROG_POE_Part_1.Models.Status.Pending ? "btn-primary" : "btn-secondary")">
                                    @(claim.Status == PROG_POE_Part_1.Models.Status.Pending ? "Review" : "View")
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
