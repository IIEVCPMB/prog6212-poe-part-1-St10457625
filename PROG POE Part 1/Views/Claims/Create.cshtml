@model PROG_POE_Part_1.Models.Claim
@{
    ViewBag.Title = "Add Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-black text-white">
                <h3>New Claim</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    @* Hidden Claim_ID (auto-assigned) *@
                    <input type="hidden" asp-for="Claim_ID" />

                    <div class="mb-3">
                        <label asp-for="Lecturer_ID" class="form-label"></label>
                        <input asp-for="Lecturer_ID" class="form-control" placeholder="Enter Lecturer ID (e.g. LID-123456)" />
                        <span asp-validation-for="Lecturer_ID" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Lecturer Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Date_Submitted" class="form-label"></label>
                        <input asp-for="Date_Submitted" class="form-control" type="date" />
                        <span asp-validation-for="Date_Submitted" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Total_Hours" class="form-label"></label>
                        <input asp-for="Total_Hours" class="form-control" type="number" step="0.1" placeholder="Enter Hours Worked" />
                        <span asp-validation-for="Total_Hours" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Hourly_Rate" class="form-label"></label>
                        <input asp-for="Hourly_Rate" class="form-control" type="number" step="0.01" placeholder="Enter Hourly Rate" />
                        <span asp-validation-for="Hourly_Rate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Supporting Documents</label>
                        <input type="file" class="form-control" name="documents" multiple />
                        <small class="form-text text-muted">Upload receipts, travel logs, etc. (PDF, DOCX, TXT, XLSX)</small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/Claims" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit Claim</button>
                    </div>
                </form>

                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success mt-3">@ViewBag.Success</div>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
