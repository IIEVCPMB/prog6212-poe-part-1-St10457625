@model PROG_POE_Part_1.Models.Claim
@{
    ViewBag.Title = "Claim Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mt-4">
    <div class="card-header bg-dark text-white">
        <h3>Claim Details</h3>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Claim ID</dt>
            <dd class="col-sm-9">@Model.Claim_ID</dd>

            <dt class="col-sm-3">Lecturer ID</dt>
            <dd class="col-sm-9">@Model.Lecturer_ID</dd>

            <dt class="col-sm-3">Lecturer Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Date Submitted</dt>
            <dd class="col-sm-9">@Model.Date_Submitted</dd>

            <dt class="col-sm-3">Total Hours</dt>
            <dd class="col-sm-9">@Model.Total_Hours</dd>

            <dt class="col-sm-3">Hourly Rate</dt>
            <dd class="col-sm-9">@Model.Hourly_Rate</dd>

            <dt class="col-sm-3">Total Amount</dt>
            <dd class="col-sm-9">@Model.Total_Amount</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.Status == PROG_POE_Part_1.Models.Status.Pending)
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
                else if (Model.Status == PROG_POE_Part_1.Models.Status.Approved)
                {
                    <span class="badge bg-success">Approved</span>
                }
                else if (Model.Status == PROG_POE_Part_1.Models.Status.Verified)
                {
                    <span class="badge bg-success">Verified</span>
                }
                else
                {
                    <span class="badge bg-danger">Declined</span>
                }
            </dd>
        </dl>

        <hr />

        <h5>Uploaded Documents</h5>
        @if (Model.Documents != null && Model.Documents.Count > 0)
        {
            <table class="table table-bordered mt-3">
                <thead class="table-light">
                    <tr>
                        <th>File Name</th>
                        <th>Size (KB)</th>
                        <th>Encrypted</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doc in Model.Documents)
                    {
                        <tr>
                            <td>@doc.FileName</td>
                            <td>@(Math.Round(doc.FileSize / 1024.0, 2))</td>
                            <td>@(doc.IsEncrypted ? "Yes" : "No")</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary"
                                   href="@Url.Action("DownloadFile", "Claims", new { filePath = doc.FilePath, fileName = doc.FileName })">
                                    Download
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No documents uploaded for this claim.</p>
        }

        <div class="d-flex justify-content-lg-start mt-4">
            <div class="accordion w-50" id="reviewAccordion">
                <div class="accordion-item shadow-sm">
                    <h2 class="accordion-header" id="headingReviews">
                        <button class="accordion-button collapsed bg-light fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapseReviews" aria-expanded="false" aria-controls="collapseReviews">
                            Claim Reviews
                        </button>
                    </h2>
                    <div id="collapseReviews" class="accordion-collapse collapse" aria-labelledby="headingReviews" data-bs-parent="#reviewAccordion">
                        <div class="accordion-body">

                            @if (Model.Reviews != null && Model.Reviews.Count > 0)
                            {
                                foreach (var review in Model.Reviews)
                                {
                                    <div class="card mb-3 border-0 border-start border-4 rounded-0
                                        @(review.Decision == PROG_POE_Part_1.Models.Status.Approved ? "border-success" :
                                          review.Decision == PROG_POE_Part_1.Models.Status.Declined ? "border-danger" : "border-warning")">
                                            <div class="card-body">
                                            <h6 class="fw-bold mb-1">@review.ReviewerName <span class="text-muted">(@review.ReviewerRole)</span></h6>
                                            <p class="mb-1">
                                            <span class="badge
                                         @(review.Decision == PROG_POE_Part_1.Models.Status.Approved ? "bg-success" :
                                           review.Decision == PROG_POE_Part_1.Models.Status.Declined ? "bg-danger" : "bg-warning text-dark")">
                                         @review.Decision
                                        </span>
                                    </p>
                                    <p class="mb-1"><strong>Comments:</strong> @review.Comments</p>
                                    <small class="text-muted">@review.ReviewDate.ToString("yyyy-MM-dd HH:mm")</small>
                                </div>
                            </div>
                                                        }
                            }
                            else
                            {
                                <p class="text-muted">No reviews yet.</p>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="mt-4">
            <a href="/Claims" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
