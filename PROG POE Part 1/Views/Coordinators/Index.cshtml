@model IEnumerable<PROG_POE_Part_1.Models.Claim>
@{
    ViewBag.Title = "Coordinator Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Programme Coordinator Dashboard</h2>
    <div>
        <span class="badge bg-warning me-2">@ViewBag.PendingCount Pending</span>
        <span class="badge bg-success me-2">@ViewBag.VerifiedCount Verified</span>
        <span class="badge bg-danger">@ViewBag.DeclinedCount Declined</span>
    </div>
</div>

<ul class="nav nav-tabs mb-3">
    <li class="nav-item"><a class="nav-link @(ViewBag.Filter == "all" ? "active" : "")" href="?filter=all">All</a></li>
    <li class="nav-item"><a class="nav-link @(ViewBag.Filter == "pending" ? "active" : "")" href="?filter=pending">Pending</a></li>
    <li class="nav-item"><a class="nav-link @(ViewBag.Filter == "verified" ? "active" : "")" href="?filter=verified">Verified</a></li>
    <li class="nav-item"><a class="nav-link @(ViewBag.Filter == "declined" ? "active" : "")" href="?filter=declined">Declined</a></li>
</ul>

<div class="card shadow mt-3">
    <div class="card-body table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-secondary table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Total (R)</th>
                    <th>Submitted</th>
                    <th>Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Claim_ID</td>
                        <td>@claim.Name</td>
                        <td>@(claim.Total_Hours* claim.Hourly_Rate)</td>
                        <td>@claim.Date_Submitted.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge bg-@(
                                  claim.Status == PROG_POE_Part_1.Models.Status.Pending ? "warning" :
                                  claim.Status == PROG_POE_Part_1.Models.Status.Verified ? "success" :
                              claim.Status == PROG_POE_Part_1.Models.Status.Approved ? "success" :
                                  "danger"
                                                        )">@claim.Status</span>
                    </td>
                    <td class="text-center">
                        <a asp-action="Verify" asp-controller="Coordinators" asp-route-id="@claim.Claim_ID" class="btn btn-sm btn-outline-dark">View</a>
                    </td>
                </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
